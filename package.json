    "@typescript-eslint/parser": "^6.4.0",
    "@typescript-eslint/utils": "^6.4.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.47.0",
    "eslint-plugin-unicorn": "^48.0.1",
